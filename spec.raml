#%RAML 1.0
title: Present Registry API
baseUri: info3103.cs.unb.ca
version: v1
/login:
  delete:
    description: |
      Destroy a registered user's session.
    responses:
      204:
      404:
  post:
    description: |
      Create a new session for a registered user.
    body:
      application/json:
        type: |
          {
            "type": "object",
            "$schema": "http://json-schema.org/draft/2019-09/schema",
            "properties": {
              "username": { "type": "string" },
              "password": { "type": "string" }
            }
          }
        example: |
          {
            "username": "jsmith",
            "password": "password1!"
          }
    responses:
      204:
        headers:
          Set-Cookie:
      400:
      401:
/users:
  get:
    description: |
      List all registered users.
      Can filter on given parameters.
      Accessible to all registered users.
    queryParameters:
      first_name?:
        description: The first name of a user, or a fragment of it.
        type: string
        example: j
      last_name?:
        description: The last name of a user, or a fragment of it.
        type: string
        example: smith
    responses:
      200:
        body:
          application/json:
            example: |
              [
                {
                  "user_id": 3,
                  "username": "bsmith",
                  "first_name": "Bob",
                  "last_name": "Smith",
                  "dob": "1990-12-31"
                },
                {
                  "user_id": 4,
                  "username": "asmith",
                  "first_name": "Alice",
                  "last_name": "Smith",
                  "dob": "1992-09-01"
                }
              ]
      401:
  post:
    description: |
      Register a new user with the service.
      Accessible to everyone.
    body:
      application/json:
        type: |
          {
            "type": "object",
            "$schema": "http://json-schema.org/draft/2019-09/schema",
            "properties": {
              "first_name": { "type": "string" },
              "last_name": { "type": "string" },
              "dob": { "type": "string" },
              "username": { "type": "string" },
              "password": { "type": "string" }
            }
          }
        example: |
          {
            "first_name": "John",
            "last_name": "Smith",
            "dob": "1970-01-31",
            "username": "jsmith",
            "password": "password1!"
          }
    responses:
      201:
        body:
          application/json:
            example: |
              {
                "user_id": 5
              }
      400:
  /{user}:
    description: |
      Perform actions on a specific user,
      with an ID number of `{user}`.
    delete:
      description: |
        Delete a user from the service.
        Accessible to the given user only.
      responses:
        204:
        401:
        403:
        404:
    get:
      description: |
        Get the details for a user.
        Accessible to all registered users.
      responses:
        200:
          body:
            application/json:
              type: |
                {
                  "type": "object",
                  "$schema": "http://json-schema.org/draft/2019-09/schema",
                  "properties": {
                    "username": { "type": "string" },
                    "first_name": { "type": "string" },
                    "last_name": { "type": "string" },
                    "dob": { "type": "string" }
                  }
                }
              example: |
                {
                  "username": "jsmith",
                  "first_name": "John",
                  "last_name": "Smith",
                  "dob": "1970-01-31"
                }
        401:
        404:
    put:
      description: |
        Modify the details for a user.
        Accessible to the given user only.
      body:
        application/json:
          type: |
            {
              "type": "object",
              "$schema": "http://json-schema.org/draft/2019-09/schema",
              "properties": {
                "first_name": { "type": "string" },
                "last_name": { "type": "string" },
                "dob": { "type": "string" }
              }
            }
          example: |
            {
              "first_name": "Johnathon",
              "last_name": "Smithsodian",
              "dob": "2000-02-29"
            }
      responses:
        204:
        401:
        401:
        404:
    /presents:
      get:
        description: |
          List all presents associated with a user.
          Can filter on given parameters.
          Accessible by all registered users.
        queryParameters:
          name?:
            description: The name of a present, or a fragment of it.
            type: string
            example: some item
          description?:
            description: The description of a present, or a fragment of it.
            type: string
            example: a cool item
        responses:
          200:
            body:
              application/json:
                example: |
                  [
                    {
                      "present_id": 2,
                      "name": "Some item",
                      "description": "This is a cool item and I wish I had one!",
                      "cost": 19.99,
                      "url": "amazon.ca/someitem",
                      "user_id": 5
                    },
                    {
                      "present_id": 3,
                      "name": "Some other item",
                      "description": "This is also a cool item and I wish I had one as well!",
                      "cost": 24.95,
                      "url": "amazon.ca/someotheritem",
                      "user_id": 5
                    }
                  ]
          401:
          404:
      post:
        description: |
          Add a new present to the present list of a user.
          Accessible to the given user only.
        body:
          application/json:
            type: |
              {
                "type": "object",
                "$schema": "http://json-schema.org/draft/2019-09/schema",
                "properties": {
                  "name": { "type": "string" },
                  "desc": { "type": "string" },
                  "cost": { "type": "number" },
                  "url": { "type": "string" }
                }
              }
            example: |
              {
                "name": "Yet another item",
                "description": "This item is also cool and I really want one!",
                "cost": 15.50,
                "url": "amazon.ca/yetanotheritem"
              }
        responses:
          201:
            body:
              application/json:
                example: |
                  {
                    "present_id": "4"
                  }
          401:
          403:
      /{present}:
        description: |
          Perform actions on a specific present,
          with an ID number of `{present}`.
        delete:
          description: |
            Delete a present from a user.
            Accessible to the given user only.
          responses:
            204:
            401:
            403:
            404:
        get:
          description: |
            Get the details of a present for a user.
            Accessible to all registered users.
          responses:
            200:
              body:
                application/json:
                  type: |
                    {
                      "type": "object",
                      "$schema": "http://json-schema.org/draft/2019-09/schema",
                      "properties": {
                        "name": { "type": "string" },
                        "desc": { "type": "string" },
                        "cost": { "type": "number" },
                        "url": { "type": "string" },
                        "user_id": { "type": "number" }
                      }
                    }
                  example: |
                    {
                      "name": "Yet another item",
                      "description": "This item is also cool and I really want one!",
                      "cost": 15.50,
                      "url": "amazon.ca/yetanotheritem",
                      "user_id": 5
                    }
            401:
            404:
        put:
          description: |
            Modify the details of a present for a user.
            Accessible to the given user only.
          body:
            application/json:
              type: |
                {
                  "type": "object",
                  "$schema": "http://json-schema.org/draft/2019-09/schema",
                  "properties": {
                    "name": { "type": "string" },
                    "desc": { "type": "string" },
                    "cost": { "type": "number" },
                    "url": { "type": "string" }
                  }
                }
              example: |
                {
                  "name": "Yet another item (edited)",
                  "desc": "This item only somewhat cool, but I still want one.",
                  "cost": 999.99,
                  "url": "ebay.ca/yetanotheritem"
                }
          responses:
            204:
            401:
            403:
            404:
